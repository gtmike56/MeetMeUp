<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleEdit">


        <EditText
            android:id="@+id/editStartTimeFriday"
            android:layout_width="86dp"
            android:layout_height="45dp"

            android:layout_marginStart="148dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartTimeThursday" />

        <EditText
            android:id="@+id/editEndTimeFriday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toEndOf="@+id/editStartTimeFriday"
            app:layout_constraintTop_toBottomOf="@+id/editEndTimeThursday" />

        <EditText
            android:id="@+id/editStartTimeThursday"
            android:layout_width="86dp"
            android:layout_height="45dp"

            android:layout_marginStart="148dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartTimeWednesday" />

        <EditText
            android:id="@+id/editEndTimeThursday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintStart_toEndOf="@+id/editStartTimeThursday"
            app:layout_constraintTop_toBottomOf="@+id/editEndTimeWednesday" />

        <EditText
            android:id="@+id/editStartTimeWednesday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartTimeTuesday" />

        <EditText
            android:id="@+id/editEndTimeWednesday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toEndOf="@+id/editStartTimeWednesday"
            app:layout_constraintTop_toBottomOf="@+id/editEndTimeTuesday" />

        <EditText
            android:id="@+id/editStartTimeTuesday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"

            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartTimeMonday" />

        <EditText
            android:id="@+id/editEndTimeTuesday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/editStartTimeTuesday"
            app:layout_constraintTop_toBottomOf="@+id/editEndTimeMonday" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/scheduleEdit_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider5"
            app:roundedCorners="true"
            app:showOutline="false" />


        <View
            android:id="@+id/divider5"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartTimeFriday" />


        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textSize="26dp"
            app:bootstrapBrand="primary"
            app:bootstrapText="Work:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/scheduleEdit_MondayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="Monday"
            android:textSize="20dp"
            app:bootstrapBrand="danger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/scheduleEdit_TuesdayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Tuesday"
            android:textSize="20dp"
            app:bootstrapBrand="danger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEdit_MondayLabel" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/scheduleEdit_WednesdayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Wednesday"
            android:textSize="20dp"
            app:bootstrapBrand="danger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEdit_TuesdayLabel" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/scheduleEdit_ThursdayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Thursday"
            android:textSize="20dp"
            app:bootstrapBrand="danger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEdit_WednesdayLabel" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/scheduleEdit_FridayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Friday"
            android:textSize="20dp"
            app:bootstrapBrand="danger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEdit_ThursdayLabel" />

        <EditText
            android:id="@+id/editStartTimeMonday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/editEndTimeMonday"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editStartTimeMonday"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
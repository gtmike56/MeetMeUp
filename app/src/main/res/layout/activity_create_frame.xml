<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFrame">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTextText_place"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:hint="Enter place"
        android:inputType="textPostalAddress"
        android:textColor="#000"
        android:textSize="20dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/textView_place"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_category"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTextText_category"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:hint="Enter category"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="20dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:roundedCorners="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/textView_category"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_time" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTextText_time"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:hint="Enter time"
        android:inputType="time"
        android:textColor="#000"
        android:textSize="20dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_date"
        app:roundedCorners="true"
        android:onClick="pickTheTime"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTextText_date"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:hint="Enter date"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000"
        android:textSize="20dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toEndOf="@+id/textView_date"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_title"
        app:roundedCorners="true"
        android:onClick="pickTheDate"
        />


    <TextView
        android:id="@+id/textView_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:text="Place:"
        android:textColor="#000"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_category" />

    <TextView
        android:id="@+id/textView_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:text="Category:"
        android:textColor="#000"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_time" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="50dp"
        android:text="Time:"
        android:textColor="#000"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="50dp"
        android:text="Date:"
        android:textColor="#000"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="#FFF"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_place"
        app:layout_constraintVertical_bias="0.539"
        android:onClick="createNewActivity"/>

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:text="ActivityTitle:"
        android:textColor="#000"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTextText_title"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:hint="Enter title"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="20dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:roundedCorners="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/textView_title"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>